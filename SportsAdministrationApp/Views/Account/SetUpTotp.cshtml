@model SportsAdministrationApp.ViewModels.TotpConfirmViewModel
@{
    ViewBag.Title = "Configure Totp";
}
@{
    var data = ViewBag.Message;
}
<h1>User Registration</h1>
<h6>To set up 2FA, download Google Authenticator from the app store, or google play.<br />Press the + button, and enter this setup key: @data.TotpSetupCode, or scan the QR code below.</h6>
<img src="@data.QrCodeUrl">
<h6>Once you have configured 2FA, click <a asp-for="TotpConfirm" asp-controller="account">here</a> to enter your Google Authenticator code. Note: Before logging in for the first time
    ensure you have confirmed your email.</h6>
