@model IEnumerable<SportsAdministrationApp.Models.User>
<-- -->User Details Page, displays details of all users</-->
<html>
<head>
    <title>Employee List</title>
</head>
<body>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Team</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Name</td>
                    <td>@user.Team</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>