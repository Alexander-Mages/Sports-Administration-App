@model SportsAdministrationApp.ViewModels.HomeDetailsViewModel 
<html>
<head>
    <title></title>
</head>
<body>
    <h3>@ViewBag.PageTitle</h3>

    <div class="card-body text-center">
        <h4>Name : @Model.User.Name</h4>
        <h4>Email : @Model.User.Email></h4>
        <h4>Team : @Model.User.Team</h4> 
    </div>
    <div class="card-footer text-center">
        <a asp-controller="home" asp-action="index" class="btn btn-primary">Back</a>
        <a asp-action="edit" asp-controller="home"
           asp-route-id="@Model.User.Id" class="btn btn-primary">Edit</a>
        <a href="#" class="btn btn-danger">Delete</a>
    </div>
</body>
</html>